{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": [
              "cmake -DCMAKE_BUILD_TYPE=Debug .",
              "&&",
              "cmake --build .",
              "&&",
              "make",
            ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": [
              "cmake -DCMAKE_BUILD_TYPE=Release .",
              "&&",
              "cmake --build .",
              "&&",
              "make",
            ]
        }
    ]
}